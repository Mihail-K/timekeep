<%= form_for(@event) do |f| %>
  <%= hidden_field_tag('page', @page) %>
  <div class="form-row">
    <div class="form-group col-sm-12">
      <label for="event_date">Date</label>
      <%= f.date_field(:date, class: 'form-control') %>
    </div>
    <div class="form-group col">
      <label for="event_start_time">Start Time</label>
      <%= f.time_field(:start_time, class: 'form-control', value: @event.start_time) %>
    </div>
    <div class="form-group col">
      <label for="event_end_time">End Time</label>
      <%= f.time_field(:end_time, class: 'form-control', value: @event.end_time) %>
    </div>
  </div>
  <div class="form-group">
    <label for="event_description">Description</label>
    <%= f.text_area(:description, class: 'form-control', required: true) %>
  </div>
  <% if @event.new_record? %>
    <div class="form-group">
      <div class="form-check">
        <%= f.check_box(:ends_previous, class: 'form-check-input') %>
        <label for="event_ends_previous" class="form-check-label">
          Set end-time on previous
        </label>
      </div>
    </div>
  <% end %>
  <%= f.submit(@event.persisted? ? 'Save Changes' : 'Log Event', class: 'btn btn-primary') %>
<% end %>
