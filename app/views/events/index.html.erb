<% cache([@user, @date]) do %>
  <div class="row">
    <%= render(partial: 'filters', locals: { date: @date }) %>
  </div>
  <div class="row">
    <%= render(partial: 'table', locals: { events: @events }) %>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-auto">
      <%= paginate(@events, theme: 'twitter-bootstrap-4') %>
    </div>
  </div>
<% end %>
